{
  "name": "correctness",
  "summary": "check that various Unix commands work corrects on a dxfuse mounted volume",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "verbose",
      "class": "boolean",
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name" : "filesystem_log",
      "class" : "file",
      "optional" : true
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "code.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "execDepends" : [
      {"name" : "tree", "package_manager" : "apt"}
    ],
    "systemRequirements": {
      "*":{
        "instanceType": "mem2_hdd2_v2_x4"
      }
    },
    "timeoutPolicy" : {
      "*" : {
        "hours" : 1
      }
    }
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW",
    "network" : [ "*" ]
  }
}
